<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food5"
    tools:context="com.example.emtiaz.resturent.MainActivity"
   >
    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="About Us"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/stf_mnage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="staffed management"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="Food list"
        android:layout_below="@+id/stf"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <Button
        android:id="@+id/pament"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="cass pament"
        android:layout_below="@+id/online"
        /></LinearLayout>
</RelativeLayout>
